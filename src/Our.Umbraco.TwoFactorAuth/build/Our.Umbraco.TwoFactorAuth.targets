<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <OurUmbracoTwoFactorAuthContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.TwoFactorAuth\**\*.*</OurUmbracoTwoFactorAuthContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoTwoFactorAuthAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoTwoFactorAuthContentFiles Include="$(OurUmbracoTwoFactorAuthContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.TwoFactorAuth files: $(OurUmbracoTwoFactorAuthContentFilesPath) - #@(OurUmbracoTwoFactorAuthContentFiles->Count()) files" Importance="high" />
        <Copy SourceFiles="@(OurUmbracoTwoFactorAuthContentFiles)" DestinationFiles="@(OurUmbracoTwoFactorAuthContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.TwoFactorAuth\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>
    
    <Target Name="ClearOurUmbracoTwoFactorAuthAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoTwoFactorAuthDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.TwoFactorAuth\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.TwoFactorAuth data" Importance="high" />
        <RemoveDir Directories="@(OurUmbracoTwoFactorAuthDir)" />
    </Target>
</Project>
